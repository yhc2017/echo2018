<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.echo.quick.activities.RetrievePasswordActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/quick_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/quick_back"
            android:padding="9dp"
            android:layout_width="@dimen/toolbar_content"
            android:layout_height="@dimen/toolbar_content"
            android:layout_margin="@dimen/content_margin_hieght"
            android:src="@drawable/ic_home" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/quick_back"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_content_textsize" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                style="@style/MyFont.Home.Content"
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="账号：" />
            <EditText
                android:id="@+id/et_iphone"
                android:background="@null"
                android:enabled="false"
                android:text="15521060697"
                android:textColorHint="@color/font_black_4"
                android:textColor="@color/font_black_0"
                android:textColorLink="@color/bule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="8dp"
            android:background="@color/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                style="@style/MyFont.Home.Content"
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="新密码：" />
            <EditText
                android:id="@+id/et_new_pwd"
                android:background="@null"
                android:hint="Please enter"
                android:textColorHint="@color/font_black_4"
                android:textColor="@color/font_black_0"
                android:inputType="numberPassword"
                android:textColorLink="@color/bule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="8dp"
            android:background="@color/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                style="@style/MyFont.Home.Content"
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:text="确认密码：" />
            <EditText
                android:background="@null"
                android:hint="Please enter"
                android:id="@+id/et_confirm_pwd"
                android:inputType="numberPassword"
                android:textColorHint="@color/font_black_4"
                android:textColor="@color/font_black_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_login"
        android:layout_marginTop="20dp"
        android:text="确定并登录"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="@drawable/login_button"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
