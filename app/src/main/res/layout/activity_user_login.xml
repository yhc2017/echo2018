<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_heigh"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/toolbar_content"
            android:layout_height="@dimen/toolbar_content"
            android:layout_margin="@dimen/toolbar_content_margin"
            android:src="@drawable/ic_toolbar_back" />

        <TextView
            android:layout_width="@dimen/toolbar_content"
            android:layout_height="@dimen/toolbar_content"
            android:layout_alignTop="@+id/login_back"
            android:layout_toEndOf="@+id/login_back"
            android:layout_toRightOf="@+id/login_back"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_content_textsize" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_bag"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/boy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_bag"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Quick单词"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/input_margin_hieght"
        android:layout_marginLeft="@dimen/input_margin_hieght"
        android:layout_marginRight="@dimen/input_margin_hieght"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/content"
            android:layout_height="@dimen/content"
            android:layout_margin="@dimen/content_margin_hieght"
            android:src="@drawable/ic_iphone" />
        <EditText
            android:phoneNumber="true"
            android:id="@+id/login_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_margin_hieght"
            android:textSize="@dimen/content_textsize_small"
            android:background="@drawable/edit_bg"
            android:hint="请输入手机号"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_hieght"

        android:layout_marginLeft="@dimen/input_margin_hieght"
        android:layout_marginRight="@dimen/input_margin_hieght"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="@dimen/content_margin_hieght"
            android:src="@drawable/ic_password" />

        <EditText
            android:password="true"
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_margin_hieght"
            android:background="@drawable/edit_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <Button
        android:id="@+id/logbtn"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="@dimen/input_margin_hieght"
        android:layout_marginRight="@dimen/input_margin_hieght"
        android:layout_marginLeft="@dimen/input_margin_hieght"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="@dimen/content_textsize_small"
        android:textColor="@color/white"
        android:text="登录"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/input_margin_hieght"
        android:gravity="center">
        <TextView
            android:id="@+id/iv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/toolbar_content_margin"
            android:padding="@dimen/toolbar_content_margin"
            android:gravity="center"
            android:text="立即注册"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"/>
    <TextView
        android:id="@+id/iv_pwdforgive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/toolbar_content_margin"
        android:padding="@dimen/toolbar_content_margin"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/colorAccent"
        android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>

